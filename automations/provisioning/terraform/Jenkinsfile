pipeline {
    agent any
    tools {
    terraform "terraform"
    }
    stages {
       stage('Git checkout') {
           steps{
               cleanWs()
               checkout scm
            }
        }
        stage('terraform format check') {
            steps{
                sh "PATH=/bin/terraform"
                sh 'cd automations/provisioning/terraform && terraform fmt'
            }
        }
        stage('terraform Init') {
            steps{
                sh 'cd automations/provisioning/terraform && terraform init'
            }
        }

        stage('terraform plan') {
            steps{
                sh "cd automations/provisioning/terraform && terraform plan \
                 -var-file="credentials.tfvars" \
                 -var 'vmid'=$params.vmid \
                 -no-color -out=plan.out"
            }
        }

        stage('terraform apply') {
            steps{
                sh 'cd automations/provisioning/terraform && timeout 1h terraform apply -var-file="credentials.tfvars" --auto-approve'
                sh "terraform output"
            }
        }

        stage('Reboot VM') {
            steps {
                sshagent(credentials : ['pve']) {
                    sh "ssh root@192.168.0.20 qm reboot $params.vmid"
                }
            }
        }

        stage('cleanup') {
            steps{
              cleanWs()
            }
        }
    }

        
}