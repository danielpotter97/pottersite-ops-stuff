pipeline {
    agent any
    tools {
    terraform "terraform"
    }
    stages {
       stage('Git checkout') {
           steps{
               cleanWs()
               checkout scm
            }
        }
        stage('terraform format check') {
            steps{
                sh "PATH=/bin/terraform"
                sh 'cd automations/provisioning/terraform && terraform fmt'
            }
        }
        stage('terraform Init') {
            steps{
                sh 'cd automations/provisioning/terraform && terraform init'
                sh 'ls -ltra'
            }
        }
        stage('terraform apply') {
            steps{
                sh 'cd automations/provisioning/terraform && terraform apply --auto-approve'
            }
        }
        stage('cleanup') {
            steps{
             
              sh 'rm -rf automations'
            }
        }
    }

        
}