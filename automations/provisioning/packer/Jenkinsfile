pipeline {
    agent any
   
    stages {
       stage('Git checkout') {
           steps{
               cleanWs()
               checkout scm 
               sh 'sudo cp -R ${WORKSPACE}/automations /home'
            }
        }

        stage('Validate packer file') {
            steps{
                sh "packer validate -var-file='/home/automations/provisioning/packer/template.pkr.hcl' /home/automations/provisioning/packer/ubuntu-server-20-04-docker/ubuntu-server-20-04-docker.pkr.hcl"
            }
        }

        stage('Build packer file') {
            steps{
                
                sh "packer build -var-file='/home/automations/provisioning/packer/template.pkr.hcl' /home/automations/provisioning/packer/ubuntu-server-20-04-docker/ubuntu-server-20-04-docker.pkr.hcl"
            }
        }

        stage('cleanup') {
            steps{
              cleanWs()
            }
        }
    }

        
}