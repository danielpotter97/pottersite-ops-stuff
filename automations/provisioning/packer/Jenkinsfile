pipeline {
    agent any
   
    stages {
       stage('Git checkout') {
           steps{
               cleanWs()
               checkout scm 
               sh 'sudo cp -R ${WORKSPACE}/automations /home'
            }
        }

        stage('Validate packer file') {
            steps{
                sh """packer validate \
                        -var proxmox_username="root@pam" \
                        -var token="bf14e2b7-d13b-4dcd-a40a-cc5f7f2b396a" \
                        -var proxmox_url=https://192.168.0.1:8006/api2/json \
                        automations/provisioning/packer/rocky-linux-8-docker/packer.json
                """
            }
        }

        stage('Build packer file') {
            steps{
                sh """packer build \
                        -var proxmox_username="root@pam" \
                        -var token="bf14e2b7-d13b-4dcd-a40a-cc5f7f2b396a" \
                        -var proxmox_url=https://192.168.0.1:8006/api2/json \
                        automations/provisioning/packer/rocky-linux-8-docker/packer.json
                """
            }
        }


        stage('cleanup') {
            steps{
              cleanWs()
            }
        }
    }

        
}