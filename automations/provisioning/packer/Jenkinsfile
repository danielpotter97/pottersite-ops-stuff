pipeline {
    agent any
   
    stages {
       stage('Git checkout') {
           steps{
               cleanWs()
               checkout scm 
               sh 'sudo cp -R ${WORKSPACE}/automations /home'
            }
        }

        stage('Validate packer file') {
            steps{
                dir ("automations/provisioning/packer"){
                    sh """packer validate \
                        -var-file='credentials.json' \
                        rocky-linux-8-docker/packer.json\
                        -var 'ssh_passwd=$params.ssh_passwd'
                    """
                }
            }
        }

        stage('Build packer file') {
            steps{
                dir ("automations/provisioning/packer"){
                    sh """PACKER_LOG=1 packer build \
                        -var-file='credentials.json' \
                        rocky-linux-8-docker/packer.json
                        -var 'ssh_passwd=$params.ssh_passwd'
                    """
                }
            }
        }


        stage('cleanup') {
            steps{
              cleanWs()
            }
        }
    }

        
}