pipeline {
    agent any
   
    stages {
       stage('Git checkout') {
           steps{
               cleanWs()
               checkout scm 
               sh 'sudo cp -R ${WORKSPACE}/automations /home'
            }
        }

        stage('Validate packer file') {
            steps{
                dir ("automations/provisioning/terraform"){
                    sh """packer validate \
                        -var-file='credentials.tfvars' 
                        rocky-linux-8-docker/packer.json
                    """
                 }
            }
        }

        stage('Build packer file') {
            steps{
                dir ("automations/provisioning/terraform"){
                    sh """PACKER_LOG=1 packer build \
                        -var-file=credentials.tfvars'
                        rocky-linux-8-docker/packer.json
                    """
            }
        }


        stage('cleanup') {
            steps{
              cleanWs()
            }
        }
    }

        
}